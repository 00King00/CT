html
	head
		include ./parts/head.pug
		include ./parts/pgs.pug
	body
		include ./parts/header.pug
		.page-background
			.model-selection.model-selection_grey
				.selection
					form
						select(name="year")
							option(selected) 2018
							option 2017
							option 2016
							option 2015
						select(name="brand")
							option(selected) BMW
							option BMW
							option VW
							option Audi
						select(name="door-count")
							option(selected) 5
							option 3
						select(name="type-ofbody")
							option(selected) Седан
							option Хетчбек
							option Пикап
							option Универсал
						button(type="submit") Найти
			.wrapper.clearfix
				.col-tablet-1-4.no-padding
					include ./parts/filters.pug
				.col-tablet-3-4
					
					mixin product(url)
						.col-phablet-1-2.col-laptop-1-3
							.product
								a(href="#").product__pic
									img(src=url, alt="icon")
								.product__info
									.product__rating
										i.fa.fa-star
										i.fa.fa-star
										i.fa.fa-star
										i.fa.fa-star
										i.fa.fa-star
									a(href="#").product__name
										|Задние фонари "BP" (диодные, красные/белые) для ВАЗ 2108, 2109, 2099 и 2113, 2114
									.product__price
										span 24 500
										i "
									.add-to-fav
									.add-to-cart
					+product("images/photo/product_04.png")
					+product("images/photo/product_02.png")
					+product("images/photo/product_03.png")
					+product("images/photo/product_01.png")
					+product("images/photo/product_02.png")
					+product("images/photo/product_04.png")
					+product("images/photo/product_02.png")
					+product("images/photo/product_03.png")
					+product("images/photo/product_01.png")
		include ./parts/review-slider.pug

		include ./parts/footer.pug
